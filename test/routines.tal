@sierpinski ( -- ) [
	( mask ) [ LIT2r 0a18 ] [ LIT2r 2018 ]
	( size ) [ LIT2 &size 1001 ] SUB
	&>ver ( -- )
		DUP INCk
		&>pad ( length -- )
			DEOkr
			#01 SUB DUP ?&>pad
		&>fill ( length i -- )
			ANDk DUP2r ?{ POP2r ORA2kr } DEOr DEOkr
			INC ADDk ,&size LDR LTH ?&>fill
		POP2 OVR2r DEOr #0d18 DEO
		#01 SUB INCk ?&>ver
	POP POP2r POP2r JMP2r
]

